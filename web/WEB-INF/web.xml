<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.commonFeature.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>service</servlet-name>
        <servlet-class>controller.commonFeature.serviceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>serviceListServlet</servlet-name>
        <servlet-class>controller.commonFeature.serviceListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>changeProfile</servlet-name>
        <servlet-class>controller.commonFeature.changeProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminDashboard</servlet-name>
        <servlet-class>controller.adminFeature.adminDashboard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>managerDashboard</servlet-name>
        <servlet-class>controller.managerFeature.managerDashboard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>staffDashboard</servlet-name>
        <servlet-class>controller.staffFeature.staffDashboard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controller.commonFeature.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homeController</servlet-name>
        <servlet-class>controller.commonFeature.homeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminManageUser</servlet-name>
        <servlet-class>controller.adminFeature.adminManageUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addNewUser</servlet-name>
        <servlet-class>controller.adminFeature.addNewUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>service</servlet-name>
        <url-pattern>/service</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>serviceListServlet</servlet-name>
        <url-pattern>/servicelist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>changeProfile</servlet-name>
        <url-pattern>/changeProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminDashboard</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>managerDashboard</servlet-name>
        <url-pattern>/manage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>staffDashboard</servlet-name>
        <url-pattern>/staff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminManageUser</servlet-name>
        <url-pattern>/admin-manage-user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addNewUser</servlet-name>
        <url-pattern>/add-new-user</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
